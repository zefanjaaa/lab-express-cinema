<div id="movieDetail">

  <div id="detailedCard">
    <div id="moviePoster">
      <img src="{{image}}" alt="movie poster" />
    </div>

    <div id="movieDescription">
      <form action="/movies">
        <button id="goBackBtn">Go Back</button>
      </form>

      <h2>{{title}}</h2>
      <h3>Director: {{director}}</h3>

      <h4>Stars: </h4>
      <p>

        {{#each stars}}
          <ul>
            <li>
              {{this}}
            </li>
          </ul>
        {{/each}}

      </p>
      <p>{{description}}</p>

      <p>{{showtimes}}</p>
    </div>

  </div>

</div>
